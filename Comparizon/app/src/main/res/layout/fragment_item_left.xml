<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kmitl58070042.dnyopr.comparizon.fragment.ItemLeftFragment"
    android:id="@+id/fragment_l"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_a_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Header object A"
            />


        <ImageView
            android:id="@+id/item_a_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher_round"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/item_a_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="detail Object A" />

    </LinearLayout>

</FrameLayout>
